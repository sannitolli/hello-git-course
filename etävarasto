# Lisätään uusi etätietovarasto tietovarastoon
git remote add origin https://course-gitlab.tuni.fi/git-course/intermediate-branches.git

# Haetaan etätietovaraston versiohistoria ja yhdistetään se omaan tietovarastoon
git pull --allow-unrelated-histories origin main

# Luodaan uusi haara nimeltään feature/create-awesome
git checkout -b feature/create-awesome

# Lisätään "Hello from feature" tulostus hello_world.py -tiedostoon
echo "print(\"Hello from feature\")" >> hello_world.py

# Tee commit muutoksista
git add hello_world.py
git commit -m "Add 'Hello from feature' to hello_world.py"

# Pusketaan uusi haara etätietovarastoon
git push -u origin feature/create-awesome

# Luodaan uusi haara nimeltään release ja siirrytään siihen
git checkout -b release

# Lisätään "Hello from release" tulostus hello_world.py -tiedostoon
echo "print(\"Hello from release\")" >> hello_world.py

# Tee commit muutoksista
git add hello_world.py
git commit -m "Add 'Hello from release' to hello_world.py"

# Pusketaan uusi haara etätietietovarastoon
git push -u origin release
